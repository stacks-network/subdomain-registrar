{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false,
        "outDir": "lib",
        "noEmit": true,
        "baseUrl": ".",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "lib",
        "node_modules"
    ]
}